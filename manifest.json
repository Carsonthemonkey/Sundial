{
  "manifest_version": 3,
  "name": "Sundial",
  "description": "Base Level Extension",
  "version": "0.1",
  "action": {
    "default_icon": "images/hello_extensions.png"
  },
  "permissions": ["activeTab", "storage", "tabs"],
  "content_scripts":[{
    "js" : ["scripts/contents.js"],
    "matches" : ["*://*/*"],
    "run_at" : "document_end",
    "permissions" : ["activeTab", "storage", "tabs"]
  }],

  "background" : {
    "service_worker": "scripts/background.js"
  }
}